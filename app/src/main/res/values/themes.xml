<resources>
    <!-- Base application theme. -->
    <style name="Theme.VetrazCenter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="android:listDivider">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_variant</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowLightStatusBar">true</item>


    </style>

    <style name="Widget.NavigationView" parent="@style/Widget.MaterialComponents.NavigationView">
        <item name="itemBackground">@drawable/navigation_item_background_default</item>
        <item name="itemHorizontalPadding">@dimen/nav_item_horizontal_padding</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/primary</item>
    </style>

    <style name="Widget.NavigationView.RippleEffect" parent="">
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="Theme.VetrazCenter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VetrazCenter.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/round_button</item>
    </style>


    <style name="Theme.VetrazCenter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VetrazCenter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>